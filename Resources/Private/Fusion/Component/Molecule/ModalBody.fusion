prototype(Wysiwyg.CookieHandling:Component.Molecule.ModalBody) < prototype(Neos.Fusion:Component) {

    @styleguide {
        title = 'Modal Body'
        description = 'A Modal Body, which can display content.'
        props {
            content = 'Some Content'
        }
    }

    /**
        PROPS:
        - content
     */
    content = ''

    renderer = afx`
        <div class="modal-body">
            {props.content}
        </div>
    `
}
