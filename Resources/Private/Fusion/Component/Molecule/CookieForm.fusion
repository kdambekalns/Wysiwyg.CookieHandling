prototype(Wysiwyg.CookieHandling:Component.Molecule.CookieForm) < prototype(Neos.Fusion:Component) {

    @styleguide {
        title = 'Cookie Form'
        description = 'The CookieForm.'
        props {
            introText = 'This form consists is the great function of the CookieLayer'
            privacyStatementPageUri = 'https://localhost'
            cookieBoxes = Wysiwyg.CookieHandling:Component.Molecule.CookieBoxes
        }
    }

    /**
        PROPS:
           - introText
           - privacyStatementPageUri
           - cookieBoxes
     */
    introText = ''
    privacyStatementPageUri = ''
    cookieBoxes = ''

    class = 'section'
    id = 'cookieLayer'
    config = Wysiwyg.CookieHandling:Config

    renderer = afx`
        <div class={props.class}
             id={props.id}
        >
            {props.config}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <form id="cookieForm">
                            <p>
                                {props.introText}
                            </p>
                            <div class="cookie--groups">
                                {props.cookieBoxes}
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>`
}
