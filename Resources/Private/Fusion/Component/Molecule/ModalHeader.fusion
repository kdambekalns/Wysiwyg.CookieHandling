prototype(Wysiwyg.CookieHandling:Component.Molecule.ModalHeader) < prototype(Neos.Fusion:Component) {

    @styleguide {
        title = 'Modal Header'
        description = 'A Modal Header, which can display content.'
        props {
            content = 'Some Content'
        }
    }

    /**
        PROPS:
           - title
     */
    title = ''

    renderer = afx`
        <div class="modal-header">
            <h2 class="modal-title">{props.title}</h2>
        </div>
    `
}
